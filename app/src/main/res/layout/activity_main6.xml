<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A7A7A"
    android:backgroundTint="#7A7A7A"
    tools:context=".MainActivity6">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="50dp"
        android:text="Четвертый сезон"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="367dp"
        android:layout_height="211dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/sez4" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="367dp"
        android:layout_height="144dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"
        android:text="Все еще оправляясь от трагических потерь, Скотт, Стайлз, Лидия и Кира возвращаются в школу на новый семестр. Они пытаются помочь Малии воссоединиться с обществом, в то время как неожиданное воскрешение Кейт Арджент несет новую угрозу для жителей Бикон-Хиллз, за которой следует появление нового и таинственного врага, известного как Благодетель."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="serif"
        android:onClick="naz4"
        android:text="Назад"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>